---
import Layout from "./Layout.astro"

const { url } = Astro.props
const title = url.split("/").pop()
---

<Layout title={title}>
  <a
    href="/"
    class="text-lg opacity-50 transition-opacity hover:opacity-70 title"
  >
    &larr; ABCs of Consumerism
  </a>
  <h1
    class="text-4xl mt-4 mb-6 stylized"
    style={`view-transition-name: ${title};`}
  >
    {title}
    <span class="text-2xl opacity-50 font-mono ml-2">
      {["Brand", "Justify", "Omit"].includes(title) ? "verb" : "noun"}
    </span>
  </h1>
  <article
    class="prose prose-invert prose-lg prose-p:text-pretty prose-blockquote:font-mono prose-a:font-medium prose-hr:my-8"
  >
    <slot />
  </article>
</Layout>
